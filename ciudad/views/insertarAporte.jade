extends layout
block content
      
        center
          |insertar aporte
          form(role='form', action="/insertarAporte",method="post", style='max-width: 300px;')
            .form-group
              input.form-control(type='text', name="dni", placeholder='DNI')
              select(name="nombre_programa")
                each programa, i in listaprogramas
                  option(value=programa.nombre_programa)  #{programa.nombre_programa}
              input.form-control(type='number', name="id_mediodepago", placeholder='ID',value="0")

              input.form-control(type='text', name="monto", placeholder='monto')
              select(name='frecuencia')
              
                option(value='Semestral') Semestral
                option(value='Mensual') Mensual
              br
              | Seleccione el tipo de medio de pago:
              select(name='tipo_pago')
                option(value='CREDITO',onclick="mostrarcredito()") TARJETA DE CREDITO
                option(value='DEBITO',onclick="mostrardebito()") DEBITO
              
              br
              br
              
              br
              
              
              input.form-control(type='text', name="nombre_titular", placeholder='NOMBRE DEL TITULAR')
              div#formulariocredito
                input.form-control(type='text', name="nro", placeholder='NUMERO DE TARJETA')
                input.form-control(type='text', name="nombre_tarjeta", placeholder='nombre de la tarjeta', list="tarjetas")
                datalist#tarjetas
                  each tarjeta, i in listatarjetas
                    option(value=tarjeta.nombre_tarjeta)
              
                input.form-control(type='text', name="fecha_vencimiento", placeholder='FECHA DE VENCIMIENTO (DD/MM/AAA)')
              div#formulariodebito(style='display:none')          
                input.form-control(type='text', name="cbu", placeholder='CBU')
                input.form-control(type='text', name="nro_cuenta", placeholder='NUMERO DE CUENTA')
                input.form-control(type='text', name="tipo_cuenta", placeholder='TIPO DE CUENTA')
                input.form-control(type='text', name="nombre_banco", placeholder='NOMBRE DEL BANCO')
                input.form-control(type='text', name="sucursal_banco", placeholder='SUCURSAL DEL BANCO')
              input.form-control(type='text', name="codigo_verificacion", placeholder='CODIGO DE VERIFIACION')
            button(type='submit',class="boton") Aceptar

        script(languague='javascript').
          function mostrarcredito() {
          div = document.getElementById('formulariocredito');
          div.style.display = '';
          div = document.getElementById('formulariodebito');
          div.style.display = 'none';
          };
          function mostrardebito() {
          div = document.getElementById('formulariodebito');
          div.style.display = '';
          div2 = document.getElementById('formulariocredito');
          div2.style.display = 'none';
          }
          function mostrarnuevos() {
          document.getElementById('formularionuevocredito').style.display = '';
          document.getElementById('formularionuevodebito').style.display = '';
          }
          function ocultarnuevos() {
            document.getElementById('formularionuevocredito').style.display = 'none';
            document.getElementById('formularionuevodebito').style.display = 'none';
          };
          
            
            
