            input.form-control(type='text', name="cbu", placeholder='DNI')
            input.form-control(type='text', name="nro_cuenta", placeholder='NUMERO DE CUENTA')
            input.form-control(type='text', name="nombre_titular", placeholder='NOMBRE DEL TITULAR')
