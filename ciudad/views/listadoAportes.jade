extends layout
block content
  p.title Aportes:
  br   
  a(href='/insertarAporte',class="btn btn-primary aladerecha", role = "button") Nuevo 
  br
  br
  if(lista)
    table#datos.display(cellspacing='0')
      thead
        th Dni
        th Nombre y apellido
        th Programa
        th Monto
        th Frecuencia
        th
        th
      each elemento, i in lista
        tr
          td 
            a(href='/infoDonante?dni=#{elemento.dni}') #{elemento.dni}
          td #{elemento.n_y_ap}
          td #{elemento.nombre_programa}
          td #{elemento.monto}
          td #{elemento.frecuencia}
          td(class='celdacorta')
            a(href='/modificarAporte?dni=#{elemento.dni}&nombre_programa=#{elemento.nombre_programa}') modificar              
          td(class='celdacorta')
            a(href='/eliminarAporte?dni=#{elemento.dni}&nombre_programa=#{elemento.nombre_programa}') eliminar
