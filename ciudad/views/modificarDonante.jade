extends layout
block content 
      center modificar donante 
        if(!datosdonante)  
          form(role='form', action="/modificarDonanteRedir",method="post", style='max-width: 300px;')
            .form-group
              input.form-control(type='text', name="dniRedir", placeholder='DNI')
            button(type='submit',class="boton") Aceptar
        if(datosdonante)  
          p se cargo el donante!
          form(role='form', action="/modificarDonante",method="post", style='max-width: 300px;')
            .form-group
              input.form-control(type='text', name="dni", placeholder='DNI',value=datospersona.dni,readonly="true")
              input.form-control(type='text', name="n_y_ap", placeholder='NOMBRE Y APELLIDO',value=datospersona.n_y_ap)
              input.form-control(type='text', name="email", placeholder='DNI',value=datospadrino.email)
              input.form-control(type='text', name="tel_fijo", placeholder='DNI',value=datospadrino.tel_fijo)
              input.form-control(type='text', name="direccion", placeholder='DNI',value=datospadrino.direccion)
              input.form-control(type='text', name="celular", placeholder='DNI',value=datospadrino.celular)
              input.form-control(type='text', name="fecha_nac", placeholder='DNI',value=datospadrino.fecha_nac)
              input.form-control(type='text', name="cod_postal", placeholder='DNI',value=datospadrino.cod_postal)
              input.form-control(type='text', name="ocupacion", placeholder='DNI',value=datosdonante.ocupacion)
              input.form-control(type='text', name="cuil_cuit", placeholder='DNI',value=datosdonante.cuil_cuit)
            button(type='submit',class="boton") Aceptar
